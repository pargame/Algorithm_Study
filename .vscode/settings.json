{
  // Make Code Runner run in the integrated terminal so it accepts input
  "code-runner.runInTerminal": true,
  // Optional: set a safe default executor for C++ files (compile & run)
  "code-runner.executorMap": {
    "cpp": "cd $dir && mkdir -p \"bin\" && g++ -std=c++23 \"$fileName\" -O2 -o \"bin/$fileNameWithoutExt\" && \"bin/$fileNameWithoutExt\""
  }
  ,
  // Save files automatically after small delay so edits are picked up when running
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 500,
  // Ensure Code Runner saves files before running
  "code-runner.saveFileBeforeRun": true
}

