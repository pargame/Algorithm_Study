// VS Code 디버그 설정 파일 (JSONC 형식: 주석 허용)
{
  // 디버그 구성 스키마 버전
  "version": "0.2.0",
  "configurations": [
    {
      // 디버그 구성 이름: 런치 목록에서 보이는 이름
      "name": "LLDB: Launch active file",
      // 디버거 타입: 설치된 LLDB DAP 확장에 맞춰 사용
      "type": "lldb-dap",
      // 요청 타입: 'launch'는 새 프로세스를 실행해서 디버깅
      "request": "launch",
      // 실행할 프로그램 경로: 현재 활성 파일의 빌드 결과물을 가리킴
      // ${fileBasenameNoExtension}은 확장자 없는 파일 이름
      "program": "${workspaceFolder}/bin/${fileBasenameNoExtension}",
      // 프로그램에 넘길 인수 목록 (빈 배열이면 인수 없음)
      "args": [],
      // 디버거가 실행될 작업 디렉터리
      "cwd": "${workspaceFolder}",
      // 디버깅 전에 실행할 작업(task) 이름
      // 워크스페이스의 tasks.json에 정의된 빌드 작업 이름과 일치해야 함
      "preLaunchTask": "C/C++: clang++ 활성 파일 빌드",
      // 엔트리에서 멈출지 여부 (true면 프로그램 시작 직후 중단)
      "stopOnEntry": false
    }
  ]
}